{
  "manifest_version": 2,

  "name": "Buffer Emoji Picker",
  "description": "Loads an emoji picker",
  "version": "0.4",

  "content_scripts": [
    {
      "matches": ["https://buffer.com/app/profile/*"],
      "js": ["emoji-picker.js"],
      "css": ["app.css"]
    }
  ],

  "web_accessible_resources": ["/templates/*.html"],

  "permissions": [
    "activeTab"
  ]
}